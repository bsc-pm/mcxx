{instrument,!debug} preprocessor_options = -I@MINTAKA_INCLUDES@ -include mintaka.h
compiler_name = g++
compiler_options = 
linker_name = g++
linker_options = -L@NANOS_LIBS@ -Wl,-rpath,@NANOS_LIBS@
{!nanos-dev,!debug,!instrument} linker_options = -lnthreads-pfm 
