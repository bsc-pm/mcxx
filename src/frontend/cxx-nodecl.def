                 | NODECL_OPEN_M_P*COMMUTATIVE([inout_deps]expression-seq)
                 | NODECL_OPEN_M_P*SCHEDULE([chunk]expression-opt) text
                 | NODECL_OPEN_M_P*TARGET([devices] text-seq, [items] target-item-seq-opt)
# Used for parallel + {sections,for}
