# This file controls how external programs are handled
[lt-mcxx]
language = C++
options =
preprocessor_name = g++
preprocessor_options = -E -I@NANOS_INCLUDES@ -D_OPENMP=200505 -include omp.h -include nth_mcc.h -I@MINTAKA_INCLUDES@ -include mintaka.h
compiler_name = g++
compiler_options = 
linker_name = g++
linker_options = -L@NANOS_LIBS@ -Wl,-rpath,@NANOS_LIBS@ -L @MINTAKA_LIBS@ -lmintaka
pragma_prefix = nanos
compiler_phase = libtlnanos.so
compiler_phase = libtlinstr.so
compiler_phase = libtlomp.so
