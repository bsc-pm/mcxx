# Given a process mask and a number of requested cores, this function computes
# a mask that exaclty enables that number of cores.
compute_mask ()
{
    # Original mask
    local hex_mask_str=`taskset -p $$ | cut -d':' -f 2 | cut -d' ' -f 2`

    # The result will be stored in this variable
    local result_hex_mask_str=

    local req_cores=$1
    local ena_cores=0

    # We have to traverse the string that represents the mask from the end to the beginning
    local index=$((${#hex_mask_str} - 1))
    while [ ${index} -ge 0  -a ${ena_cores} -lt ${req_cores} ];
    do

        # Decimal representation of the current char
        local current_char_dec=$((0x${hex_mask_str:$index:1}))
        local result_current_char_bin_str=0

        local num_bit=0
        while [ $current_char_dec -ne 0 -a ${ena_cores} -lt ${req_cores} ];
        do
            local current_bit=$(($current_char_dec & 1))
            if [ $current_bit -eq 1 ];
            then
                ena_cores=$(($ena_cores + 1))
            fi
            result_current_char_bin_str=$(($result_current_char_bin_str | ($current_bit << $num_bit)))
            current_char_dec=$(($current_char_dec >> 1))
                num_bit=$(($num_bit + 1))
        done

        local result_current_char_hex=`echo "obase=16; ibase=10; $result_current_char_bin_str" | bc`

        result_hex_mask_str="${result_current_char_hex}${result_hex_mask_str}"
        index=$(($index - 1))
    done

    result_hex_mask_str="0x${result_hex_mask_str}"
    if [ ${ena_cores} -ne ${req_cores} ];
    then
        echo "REQUESTING MORE CORES THAN AVAILABLE RESOURCES. Initial Mask: ${hex_mask_str}, Result Mask: ${result_hex_mask_str}"
        exit -1
    fi

    echo "${result_hex_mask_str}"
}




runner_taskset ()
{
   local tmpdir
   local exe
   local args
   local env

   tmpdir="$1"
   exe="$2"
   args="$3"
   env="$4"

   echo "ENV ==> " $env >> $logfile

   # Truncate the file
   cat /dev/null > $tmpfile
   (
      # We need to evaluate ENV to pass ${TASKSET_NUM_CPUS}
      echo "set -x" >> $tmpfile
      eval $env;
      local hex_mask=$(compute_mask ${TASKSET_NUM_CPUS})
      echo $env taskset ${hex_mask} $tmpdir/$exec $args >> $tmpfile
      echo "ret=\$?" >> $tmpfile
      echo "set +x" >> $tmpfile
      echo "exit \$ret" >> $tmpfile
   )

   echo "=== TMPFILE ========" >> $logfile
   cat $tmpfile >> $logfile
   echo "=== End of TMPFILE ========" >> $logfile

   log sh $tmpfile
   sh $tmpfile >> $logfile
   local ret=$?

   return $ret
}

execute ()
{
   local version=$1
   local exec=$2
   local cversion=$3
   local env
   local args

   eval env=\"$test_ENV \${test_ENV_$version} \${test_ENV_$cversion}\"
   eval args=\"$test_ARGS \${test_ARGS_$version}\"

   log $env ./$exec $args

   eval local runner_used=\${runner_$cversion:-\${runner:-runner_local}}

   ${runner_used} "$tmpdir" "$exe" "$args" "$env"
   local ret=$?

   return $ret
}

