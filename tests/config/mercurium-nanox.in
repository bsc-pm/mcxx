#!/usr/bin/env bash

PROGRAMMING_MODEL=${1:=openmp}
CPLUSPLUS_2011=0

if [ "$2" = "c++11" ];
then
  CPLUSPLUS_2011=1
fi

function detect_gcc_version() {

    A=$(g++ -v 2>&1 | tail -n 1 | sed -e 's,^.*version\s*\([0-9]\)\.\([0-9]\+\)\(\.[0-9]\+\)*.*$,export GCC_VERSION_MAJOR=\1\nexport GCC_VERSION_MINOR=\2,')
    eval $A

}

if [ ! "$PROGRAMMING_MODEL" = "" ];
then
    PROGRAMMING_MODEL="--${PROGRAMMING_MODEL}"
fi

if [ -z "@NANOX_INCLUDES@" ];
then

cat <<EOF
test_ignore=yes
EOF

exit

fi

if [ "$TEST_LANGUAGE" = "fortran" -a @FORTRAN_TESTS_ENABLED@ = no ];
then

cat <<EOF
test_ignore=yes
EOF

exit

fi


if [ $CPLUSPLUS_2011 = 1 ];
then

detect_gcc_version

# Only for GCC 4.8
if [ $GCC_VERSION_MAJOR -lt 3 -o $GCC_VERSION_MINOR -lt 8 ];
then

cat <<EOF
test_ignore=yes
test_ignore_reason="requires g++ 4.8 or better"
EOF

exit

fi

fi

source @abs_builddir@/mercurium-libraries

cat <<EOF
MCC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=mcc --config-dir=@abs_top_builddir@/config --verbose"
MCXX="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=mcxx --config-dir=@abs_top_builddir@/config --verbose"
MFC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=mfc --config-dir=@abs_top_builddir@/config -I@abs_top_builddir@/support/openmp/fortran --verbose"
EOF

if [ $CPLUSPLUS_2011 = 1 ];
then
cat <<EOF
MCXX="\${MCXX} -std=c++11"
EOF
fi

COMMON_NANOX_CFLAGS=-DNANOX

cat <<EOF
compile_versions="\${compile_versions} nanox_mercurium"

test_CC_nanox_mercurium="\${MCC}"
test_CXX_nanox_mercurium="\${MCXX}"
test_FC_nanox_mercurium="\${MFC}"

test_FFLAGS="\${test_FFLAGS} --fpc=@abs_top_builddir@/src/driver/fortran/.libs/mf03-prescanner"

test_CFLAGS_nanox_mercurium="${PROGRAMMING_MODEL} -std=gnu99 ${COMMON_NANOX_CFLAGS}"
test_CXXFLAGS_nanox_mercurium="${PROGRAMMING_MODEL} ${COMMON_NANOX_CFLAGS}"
test_FFLAGS_nanox_mercurium="${PROGRAMMING_MODEL}"

test_LDFLAGS_nanox_mercurium="@abs_top_builddir@/lib/perish.o"

EOF

if [ "$TEST_LANGUAGE" = "c" ];
then
  if [ ! -z "@ICC@" ];
  then
cat <<EOF
IMCC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=imcc --config-dir=@abs_top_builddir@/config --verbose"
compile_versions="\${compile_versions} nanox_imcc"
test_CC_nanox_imcc="\${IMCC}"
test_CFLAGS_nanox_imcc="${PROGRAMMING_MODEL} ${COMMON_NANOX_CFLAGS}"
test_LDFLAGS_nanox_imcc="@abs_top_builddir@/lib/perish.o"
EOF
  fi

  if [ ! -z "@XLC@" ];
  then
cat <<EOF
XLMCC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=xlmcc --config-dir=@abs_top_builddir@/config --verbose"
compile_versions="\${compile_versions} nanox_xlmcc"
test_CC_nanox_xlmcc="\${XLMCC}"
test_CFLAGS_nanox_xlmcc="${PROGRAMMING_MODEL} ${COMMON_NANOX_CFLAGS}"
test_LDFLAGS_nanox_xlmcc="@abs_top_builddir@/lib/perish.o"
EOF
  fi
fi

if [ "$TEST_LANGUAGE" = "cpp" ];
then
  if [ ! -z "@ICPC@" ];
  then
cat <<EOF
IMCXX="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=imcxx --config-dir=@abs_top_builddir@/config --verbose"
compile_versions="\${compile_versions} nanox_imcxx"
test_CXX_nanox_imcxx="\${IMCXX}"
test_CXXFLAGS_nanox_imcxx="${PROGRAMMING_MODEL} ${COMMON_NANOX_CFLAGS}"
test_LDFLAGS_nanox_imcxx="@abs_top_builddir@/lib/perish.o"
EOF
  fi

  if [ ! -z "@XLCXX@" ];
  then
cat <<EOF
XLMCXX="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=xlmcxx --config-dir=@abs_top_builddir@/config --verbose"
compile_versions="\${compile_versions} nanox_xlmcxx"
test_CXX_nanox_xlmcxx="\${XLMCXX}"
test_CXXFLAGS_nanox_xlmcxx="${PROGRAMMING_MODEL} ${COMMON_NANOX_CFLAGS}"
test_LDFLAGS_nanox_xlmcxx="@abs_top_builddir@/lib/perish.o"
EOF
  fi
fi

if [ "$TEST_LANGUAGE" = "fortran" ];
then
  if [ ! -z "@IFORT@" ];
  then
cat <<EOF
IMFC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=imfc --config-dir=@abs_top_builddir@/config --verbose"
compile_versions="\${compile_versions} nanox_imfc"
test_FC_nanox_imfc="\${IMFC}"
test_FFLAGS_nanox_imfc="${PROGRAMMING_MODEL}"
test_LDFLAGS_nanox_imfc="@abs_top_builddir@/lib/perish.o"
test_ENV_nanox_imfc="FOR_IGNORE_EXCEPTIONS=1"
EOF
  fi

  if [ ! -z "@XLF@" ];
  then
cat <<EOF
XLMFC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=xlmfc --config-dir=@abs_top_builddir@/config --verbose"
compile_versions="\${compile_versions} nanox_xlmfc"
test_FC_nanox_xlmfc="\${XLMFC}"
test_FFLAGS_nanox_xlmfc="${PROGRAMMING_MODEL}"
test_LDFLAGS_nanox_xlmfc="@abs_top_builddir@/lib/perish.o"
EOF
  fi
fi

if [ ! -z "@NANOX_INSTRUMENTATION@" ];
then

cat <<EOF
compile_versions="\${compile_versions} nanox_instrument"

test_CC_nanox_instrument="\${MCC}"
test_CXX_nanox_instrument="\${MCXX}"
test_FC_nanox_instrument="\${MFC}"

test_CFLAGS_nanox_instrument="\${test_CFLAGS_nanox_mercurium} --instrument"
test_CXXFLAGS_nanox_instrument="\${test_CXXFLAGS_nanox_mercurium} --instrument"
test_FFLAGS_nanox_instrument="\${test_FFLAGS_nanox_mercurium} --instrument"

test_LDFLAGS_nanox_instrument="@abs_top_builddir@/lib/perish.o"
EOF

fi

cat <<EOF
exec_versions="1thread 2thread 4thread"

test_ENV_1thread="OMP_NUM_THREADS='1'"
test_ENV_2thread="OMP_NUM_THREADS='2'"
test_ENV_4thread="OMP_NUM_THREADS='4'"
EOF
