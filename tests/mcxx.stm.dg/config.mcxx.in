# This file controls how external programs are handled
[lt-mcxx]
language = C++
options = 
preprocessor_name = g++
preprocessor_options = -E -I@NANOS_INCLUDES@ -D_OPENMP=200505 -include omp.h -include nth_mcc.h @NEBELUNG_INCLUDES@ 
compiler_name = g++
compiler_options = 
linker_name = g++
linker_options = -L@NANOS_LIBS@ -Wl,-rpath,@NANOS_LIBS@ @NEBELUNG_LIBS@
pragma_prefix = nanos
compiler_phase = libtlnanos.so
compiler_phase = libtlstmfunc.so
compiler_phase = libtlomp.so
